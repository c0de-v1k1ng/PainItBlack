<MyAnimalsScreen@MDScreen>:
    md_bg_color: self.theme_cls.backgroundColor  # âœ… Fix

    MDBoxLayout:
        orientation: "vertical"

        MDTopAppBar:
            type: "small"

            MDTopAppBarTitle:
                text: "My Animals"
                pos_hint: {"center_x": .5}

        ScrollView:
            MDList:
                id: animals_list

        MDFabButton:
            icon: "plus"
            style: "standard"
            pos_hint: {"center_x": 0.9, "center_y": 0.1}
            on_release: app.switch_screen('add_animal')