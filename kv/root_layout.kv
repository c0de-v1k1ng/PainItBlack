<RootLayout>:
    MDBoxLayout:
        orientation: "horizontal"

        # Navigation Rail on the left
        MDNavigationRail:
            id: nav_rail
            anchor: "center"
            type: "selected"
            md_bg_color: self.theme_cls.secondaryContainerColor
            size_hint_x: None
            width: "72dp"

            # FAB Button
            MDNavigationRailFabButton:
                icon: "paw"
                on_release: app.switch_screen('home')

            # Home
            MDNavigationRailItem:
                id: nav_home
                active: True
                on_release: app.switch_screen('home')

                MDNavigationRailItemIcon:
                    icon: "home"

                MDNavigationRailItemLabel:
                    id: home_label
                    text: app.translator.translate('navigation', 'home')

            # My Animals
            MDNavigationRailItem:
                id: nav_animals
                on_release: app.switch_screen('my_animals')

                MDNavigationRailItemIcon:
                    icon: "paw"

                MDNavigationRailItemLabel:
                    id: animals_label
                    text: app.translator.translate('navigation', 'animals')

            # Assessments
            MDNavigationRailItem:
                id: nav_assessments
                on_release: app.switch_screen('assessments')

                MDNavigationRailItemIcon:
                    icon: "clipboard-list"

                MDNavigationRailItemLabel:
                    id: assessments_label
                    text: app.translator.translate('navigation', 'assessments')

            # Theme toggle
            MDNavigationRailItem:
                id: nav_settings
                on_release: app.toggle_theme()

                MDNavigationRailItemIcon:
                    icon: "theme-light-dark"

                MDNavigationRailItemLabel:
                    id: theme_toggle_label
                    text: app.translator.translate('navigation', 'theme')

            # Language selector
            MDNavigationRailItem:
                id: nav_language
                on_release: app.show_language_menu(self)

                MDNavigationRailItemIcon:
                    icon: "translate"

                MDNavigationRailItemLabel:
                    text: app.translator.translate('common', 'language')

        # Content area on the right
        MDBoxLayout:
            orientation: "vertical"

            # Screen manager to handle different screens
            ScreenManager:
                id: screen_manager