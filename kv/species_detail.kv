<SpeciesDetailScreen@MDScreen>:
    md_bg_color: self.theme_cls.backgroundColor

    MDBoxLayout:
        orientation: "vertical"

        MDTopAppBar:
            type: "small"

            MDTopAppBarLeadingButtonContainer:
                MDActionTopAppBarButton:
                    icon: "arrow-left"
                    on_release: app.switch_screen('home')

            MDTopAppBarTitle:
                text: "Species Details"
                pos_hint: {"center_x": .5}

        ScrollView:
            do_scroll_x: False
            do_scroll_y: True

            MDBoxLayout:
                orientation: "vertical"
                padding: dp(16)
                spacing: dp(16)
                size_hint_y: None
                height: self.minimum_height

                # Species info section
                MDCard:
                    orientation: "vertical"
                    padding: dp(16)
                    spacing: dp(8)
                    size_hint_y: None
                    height: dp(220)  # Fixed height to ensure content fits

                    # Species name
                    MDLabel:
                        id: species_title
                        text: "Species Name"
                        font_style: "Display"
                        role: "large"
                        halign: "center"
                        size_hint_y: None
                        height: dp(48)

                    # Species image
                    FitImage:
                        id: species_image
                        source: "assets/images/animal_placeholder.png"
                        size_hint_y: None
                        height: dp(140)
                        fit_mode: "contain"

                # Assessment Scales section
                MDCard:
                    orientation: "vertical"
                    padding: dp(16)
                    spacing: dp(16)
                    size_hint_y: None
                    height: self.minimum_height

                    MDLabel:
                        text: "Assessment Scales"
                        font_style: "Title"
                        role: "medium"
                        halign: "center"
                        size_hint_y: None
                        height: dp(36)

                    # List container
                    MDBoxLayout:
                        id: assessment_list
                        orientation: "vertical"
                        spacing: dp(12)
                        size_hint_y: None
                        height: self.minimum_height
                        padding: [0, 0, 0, 0]

                # Manuals section
                MDCard:
                    orientation: "vertical"
                    padding: dp(16)
                    spacing: dp(16)
                    size_hint_y: None
                    height: self.minimum_height

                    MDLabel:
                        text: "Manuals"
                        font_style: "Title"
                        role: "medium"
                        halign: "center"
                        size_hint_y: None
                        height: dp(36)

                    # List container
                    MDBoxLayout:
                        id: manual_list
                        orientation: "vertical"
                        spacing: dp(12)
                        size_hint_y: None
                        height: self.minimum_height
                        padding: [0, 0, 0, 0]

                # Videos section
                MDCard:
                    orientation: "vertical"
                    padding: dp(16)
                    spacing: dp(16)
                    size_hint_y: None
                    height: self.minimum_height

                    MDLabel:
                        text: "Training Videos"
                        font_style: "Title"
                        role: "medium"
                        halign: "center"
                        size_hint_y: None
                        height: dp(36)

                    # List container
                    MDBoxLayout:
                        id: video_list
                        orientation: "vertical"
                        spacing: dp(12)
                        size_hint_y: None
                        height: self.minimum_height
                        padding: [0, 0, 0, 0]