<MyAnimalsScreen@MDScreen>:
    md_bg_color: self.theme_cls.backgroundColor  # âœ… Fix

    MDBoxLayout:
        orientation: "vertical"

        MDTopAppBar:
            type: "small"

            MDTopAppBarLeadingButtonContainer:
                MDActionTopAppBarButton:
                    icon: "arrow-left"
                    on_release: setattr(app.root, 'current', 'home')

            MDTopAppBarTitle:
                text: "My Animals"
                pos_hint: {"center_x": .5}

        ScrollView:
            MDList:
                id: animals_list

        MDFabButton:
            icon: "plus"
            style: "standard"
            pos_hint: {"center_x": 0.9, "center_y": 0.1}
            on_release: setattr(app.root, 'current', 'add_animal')

