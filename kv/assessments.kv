<AssessmentsScreen@MDScreen>:
    md_bg_color: self.theme_cls.backgroundColor  # âœ… Fix

    MDBoxLayout:
        orientation: "vertical"

        MDTopAppBar:
            type: "small"

            MDTopAppBarTitle:
                text: "Assessments"
                pos_hint: {"center_x": .5}

        # In kv/assessments.kv - Add these UI elements just after the TopAppBar
        MDBoxLayout:
            orientation: "horizontal"
            size_hint_y: None
            height: "56dp"
            padding: "8dp"
            spacing: "8dp"

            MDTextField:
                id: search_field
                mode: "outlined"
                size_hint_x: 0.6
                on_text: root.filter_assessments()
                MDTextFieldHintText:
                    text: "Search by Animal/ID"

            MDTextField:
                id: species_filter
                mode: "outlined"
                size_hint_x: 0.4
                readonly: True
                on_focus: root.show_species_filter_menu() if self.focus else None
                MDTextFieldHintText:
                    text: "Species"

            MDIconButton:
                icon: "filter-remove"
                pos_hint: {"center_y": 0.5}
                on_release: root.clear_filters()

        ScrollView:
            MDList:
                id: assessments_list
                padding: "8dp"

        MDFabButton:
            icon: "plus"
            style: "standard"
            pos_hint: {"center_x": 0.9, "center_y": 0.1}
            on_release: root.show_new_assessment_dialog()